@model stapolizeiuster_carmanager.Models.Statistic

@{
    ViewBag.Title = "Statistik löschen";
}

<h2>@ViewBag.Title</h2>

<h3>@Resource.Functions.confirm_delete</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Fahrzeug
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Car.Description) - @Html.DisplayFor(model => model.Car.Radio)
        </dd>
        <dt>
            Startdatum
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>

        <dt>
            Enddatum
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndDate)
        </dd>

        <dt>
            Erstelldatum
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreationDate)
        </dd>

        <dt>
            Ersteller
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Creator)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Löschen" class="btn btn-default" /> |
            @Html.ActionLink("Abbrechen", "Index")
        </div>
    }
</div>
