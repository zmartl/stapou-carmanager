@model IEnumerable<stapolizeiuster_carmanager.Models.Car>

@{
    ViewBag.Title = "Fahrzueg Übersicht";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Fahrzeug hinzufügen", "Create")
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Beschreibung
            </th>
            <th>
                Funk
            </th>
            <th></th>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td class="table-tr">
                    <a href="@Url.Action("Edit", "Cars", new { id = item.Id })">
                        @Html.DisplayFor(modelItem => item.Description)
                    </a>
                </td>
                <td class="table-tr">
                    <a href="@Url.Action("Edit", "Cars", new { id = item.Id })">
                        @Html.DisplayFor(modelItem => item.Radio)
                    </a>
                </td>
                <td class="text-right">
                    <a href="@Url.Action("Edit", "Cars", new { id = item.Id })">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a> |
                    <a href="@Url.Action("Edit", "Cars", new { id = item.Id })">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
