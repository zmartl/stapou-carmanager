@model stapolizeiuster_carmanager.Models.Planning
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Planing hinzufügen</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
               @using (Html.BeginForm("SelectDate", "Planning"))
               {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.StartTime, "Startzeit", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">

                            @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control", id = "datetimepicker1" } })
                            @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.EndTime, "Endzeit", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.EndTime, new { htmlAttributes = new { @class = "form-control", id = "datetimepicker2" } })
                            @Html.ValidationMessageFor(model => model.EndTime, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
               }

            <div>
                @Html.ActionLink("Zurück zur Übersicht", "Index")
            </div>
            </div>
            <div class="modal-footer">
                <a href="@Url.Action("Create", "Plannings", new { startTime = @ViewBag.startTime, endTime = new DateTime(2017,04,04,17,00,00)})" />
                <button type="button" class="btn btn-primary">Send message</button>
            </div>
        </div>
    </div>
</div>