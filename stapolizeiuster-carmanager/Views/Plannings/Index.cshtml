@model IEnumerable<stapolizeiuster_carmanager.Models.Planning>

@{
    ViewBag.Title = "Planungs Übersicht";
}

<h2>@ViewBag.Title</h2>

<p>
    <a href="@Url.Action("Create", "Plannings")">
        <i class="fa fa-plus" aria-hidden="true"></i> Planung hinzufügen
    </a>
</p>
<table class="table">
    <tr>
        <th>
            Fahrzeug
        </th>
        <th>
            Anfang
        </th>
        <th>
            Ende
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="table-tr">
            <a href="@Url.Action("Edit", "Plannings", new { id = item.Id })">
                @Html.DisplayFor(modelItem => item.Car.Description)
            </a>
        </td>
        <td class="table-tr">
            <a href="@Url.Action("Edit", "Plannings", new { id = item.Id })">
                @Html.DisplayFor(modelItem => item.StartTime)
            </a>
        </td>
        <td class="table-tr">
            <a href="@Url.Action("Edit", "Plannings", new { id = item.Id })">
                @Html.DisplayFor(modelItem => item.EndTime)
            </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndTime)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
